# Redmica environment example file
# Copy to .env and fill in secrets for local/dev/test

SECRET_KEY_BASE=changeme_for_dev_or_generate

# LDAP settings for canonical Redstone stack
LDAP_HOST=redstone-ldap
LDAP_PORT=1389
LDAP_BASE_DN=ou=users,dc=redstone,dc=local
LDAP_BIND_DN=cn=admin,dc=redstone,dc=local
LDAP_BIND_PASSWORD=admin

# Rails environment
RAILS_ENV=production
